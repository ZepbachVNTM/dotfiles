#!/bin/zsh

[ $EUID -eq 0 ] && echo "Do not run this script as root."  && exit 1

case "$4" in
  -c | --config)
    option=".config"
  ;;
  -l | --local)
    option=".local"
  ;;
  *)
    option=".config"
  ;;
esac

if [ -n $2 ]
then
  file="$1"
else
  file="$2"
fi

if [ -n $3 ];
then
  name="$3"
else
  name="$1"
fi

cp -r $1 "$HOME/dotfiles/$2/$option/$name"

exit 0

